<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/traffic_tab"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >
    <Button
            android:id="@+id/update"
            android:text="@string/update"
            android:background="@color/main_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:textColor="@color/main_black"
            style="@style/SimpleButton"/>
    <TextView
            android:id="@+id/message"
            android:textColor="@color/main_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/three_before_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/three_before"/>
    <TextView
            android:id="@+id/three_before_arrive_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/three_before_terminal_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/two_before_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/two_before"/>
    <TextView
            android:id="@+id/two_before_arrive_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/two_before_terminal_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/one_before_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_before"/>
    <TextView
            android:id="@+id/one_before_arrive_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/one_before_terminal_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/ride_bus_stop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/ride_bus_stop_arrive_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/ride_bus_stop_terminal_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>